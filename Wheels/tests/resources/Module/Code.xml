<?xml version="1.0" encoding="UTF-8"?>
<tests>
    <group desc="Обработка тега code">
        <test>
            <input>
                <![CDATA[Неразрывный пробел в HTML может быть записан с помощью мнемоники <code>&nbsp;</code>]]></input>
            <expected>
                <![CDATA[Неразрывный пробел в HTML может быть записан с помощью мнемоники <code>&amp;nbsp;</code>]]></expected>
        </test>
        <test>
            <input><![CDATA[Пример строки <code class="code code-example">"Text string"</code>]]></input>
            <expected><![CDATA[Пример строки <code class="code code-example">"Text string"</code>]]></expected>
        </test>
    </group>
    <group desc="Обработка многострочного участка кода">
        <test desc="#A1 Оборачиваем каждую строку в тег code">
            <input><![CDATA[<code>function fib($n) {<br />    return ($n < 3) ? 1 : fib($n-1) + fib($n-2);
}</code>]]></input>
            <expected><![CDATA[<pre><code>function fib($n) {</code>
<code>    return ($n < 3) ? 1 : fib($n-1) + fib($n-2);</code>
<code>}</code></pre>]]></expected>
        </test>
        <test desc="#A2 Удаление концевых пробелов">
            <input><![CDATA[<code>function fib($n) {
    return ($n < 3) ? 1 : fib($n-1) + fib($n-2);
}        </code>]]></input>
            <expected><![CDATA[<pre><code>function fib($n) {</code>
<code>    return ($n < 3) ? 1 : fib($n-1) + fib($n-2);</code>
<code>}</code></pre>]]></expected>
        </test>
        <test desc="#A3 Заменяем табуляцию пробелами">
            <input><![CDATA[<code>function fib($n) {
	return ($n < 3) ? 1 : fib($n-1) + fib($n-2);
}</code>]]></input>
            <expected><![CDATA[<pre><code>function fib($n) {</code>
<code>    return ($n < 3) ? 1 : fib($n-1) + fib($n-2);</code>
<code>}</code></pre>]]></expected>
        </test>
        <test desc="Перенос атрибутов">
            <input><![CDATA[<code id="example" class="code code-example">function fib($n) {
    return ($n < 3) ? 1 : fib($n-1) + fib($n-2);
}</code>]]></input>
            <expected><![CDATA[<pre id="example" class="code code-example"><code>function fib($n) {</code>
<code>    return ($n < 3) ? 1 : fib($n-1) + fib($n-2);</code>
<code>}</code></pre>]]></expected>
        </test>
    </group>
</tests>